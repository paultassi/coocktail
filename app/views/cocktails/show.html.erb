<h1><%=@cocktail.name.capitalize %></h1>
m<%#= link_to '(delete)', cocktail_path(@cocktail), method: :delete %>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> - <%= dose.ingredient.name %> - <%#= link_to '(delete)', cocktail_dose_path(@cocktail, dose), method: :delete %>
  </li>
<% end %>
</ul>
<%= link_to new_cocktail_dose_path(@cocktail) do %>
  <span>Add a dose to </span><%=@cocktail.name.capitalize %>
<% end %>
